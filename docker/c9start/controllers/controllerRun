#▄────────────────────────────────▄
#█                                █
#█  Controller: Run               █
#█  • Запуск команд (управление)  █
#█                                █
#▀────────────────────────────────▀
controller:Run() { case "$1" in
# Общие команды
    'is_run_old') model:Run "$@" ;; # Проверяет запущен-ли старый контейнер
    'is_run')     model:Run "$@" ;; # Проверяет запущен-ли контейнер
    'is_cd')      model:Run "$@" ;; # Проверяет переменную окружения '$CD'
esac
}
