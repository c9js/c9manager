choice_port "$PORT_DEFAULT"

# Выбран пункт: "Отмена"
    if [[ $? != '0' ]]; then 
        reset # Очистка экрана
        echo 'Exit init!'
        
# Порт выбран
    else
        reset # Очистка экрана
        echo $REPLY # Выбранный порт
    fi
    