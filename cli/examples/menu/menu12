#!/bin/bash
#┌──────────────────────┐
#│ Загружаем библиотеку │
#└──────────────────────┘
. ~/lib

# Создаем пункты меню
menuItems=(
#    Цвет       Строка
    'Green' '1. 8000'
    'Green' '2. Другой'
     'Gray' '0. Exit'
)

# Выводим меню на экран
menu 'Выберите начальный порт:' 1

# Очищаем экран
reset

# Выбран пункт: "Exit"
    if is_exit; then
        echo 'Exit init!'
        exit # Завершение процесса
    fi
    
# Выбранный порт
echo $REPLY
