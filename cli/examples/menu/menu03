#!/bin/bash
#┌──────────────────────┐
#│ Загружаем библиотеку │
#└──────────────────────┘
. ~/lib

#┌───────────────┐
#│ Версия образа │
#└───────────────┘
IMAGE_NAME='c9js/c9docker:latest'

# Создаем пункты меню
menuItems=(
#     Цвет     Строка
     'Red' '1. Stop    Остановить все контейнеры'
     'Red' '2. Remove  Удалить все образы'
    'Gray' '0. Назад'
)

# Выводим меню на экран
menu 'Выберите команду:' 3

# Очищаем экран
reset

# Выбран пункт: "Exit"
    if is_exit; then
        echo 'Exit init!'
        exit # Завершение процесса
    fi
    
# Выбранный порт
echo $REPLY

exit
