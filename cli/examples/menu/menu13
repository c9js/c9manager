#!/bin/bash
#┌──────────────────────┐
#│ Загружаем библиотеку │
#└──────────────────────┘
. ~/lib

#┌───────────────┐
#│ Версия образа │
#└───────────────┘
IMAGE_NAME='c9js/c9docker:latest'

# Создаем пункты меню
menuItems=(
#     Цвет       Строка
     'Green' '1. Restart  Перезапустить текущий контейнер'
    'Yellow' '2. Stop     Остановить все контейнеры'
       'Red' '3. Remove   Удалить все образы'
      'Gray' '0. Exit'
)

# Создаем уведомление
msgOK=$(notice 'Yellow' \
    "Все контейнеры были остановлены и удалены!" \
    "Образ '$IMAGE_NAME' также был удален!" \
)

# Создаем уведомление
msgOK=$(notice 'Yellow' \
    "Контейнер '$IMAGE_NAME' успешно запущен!" \
    "http://localhost:8000/" \
)

# Создаем уведомление
msgErr=$(notice 'Red' \
    "Ошибка! Что-то не так в 'docker run ...'" \
)

# Выводим меню на экран
menu "$msgOKВыберите команду:" 1

# Очищаем экран
reset

# Выбран пункт: "Exit"
    if is_exit; then
        echo 'Exit init!'
        exit # Завершение процесса
    fi
    
# Выбранный порт
echo $REPLY
