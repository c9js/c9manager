#!/bin/bash
#┌──────────────────────┐
#│ Загружаем библиотеку │
#└──────────────────────┘
. ~/lib

# Создаем пункты меню
menuItems=(
#     Цвет       Строка
     'Green' '1. Start   Запустить новый контейнер'
    'Yellow' '2. Stop    Остановить все контейнеры'
       'Red' '3. Remove  Удалить все образы'
      'Gray' '0. Exit'
)

# Выводим меню на экран
menu 'Выберите команду:' 1

# Очищаем экран
reset

# Выбран пункт: "Exit"
    if is_exit; then
        echo 'Exit init!'
        exit # Завершение процесса
    fi
    
# Выбранный порт
echo $REPLY
